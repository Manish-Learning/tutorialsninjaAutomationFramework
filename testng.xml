<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" thread-count="3" parallel="tests">
 <listeners>
  	<listener class-name="listeners.MyListeners" />
  </listeners>
  
   <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
    	<classes>
      		  <class name="tutorialsninja.tests.Register"/>
      		 <class name="tutorialsninja.tests.Login"/> 
      		 <class name="tutorialsninja.tests.Logout"/>
      		<class name="tutorialsninja.tests.Search"/> 
   		</classes>
    </test>
    
     <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
    	<classes>
      		 <class name="tutorialsninja.tests.Register"/> 
      		 <class name="tutorialsninja.tests.Login"/> 
      		 <class name="tutorialsninja.tests.Logout"/> 
      		<class name="tutorialsninja.tests.Search"/> 
   		</classes>
    </test>
     
   <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <classes>
      		<class name="tutorialsninja.tests.Register"/>
      		<class name="tutorialsninja.tests.Login"/>
      		<class name="tutorialsninja.tests.Logout"/> 
      		<class name="tutorialsninja.tests.Search"/>
        </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
